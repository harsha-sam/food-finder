// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campus {
  id         String       @id @default(cuid())
  name       String
  shortName  String
  Restaurant Restaurant[]
}

model Restaurant {
  id           String    @id @default(cuid())
  imageUrl     String
  name         String
  runningHours String
  location     String
  costEstimate String
  avgRating    Decimal
  campus       Campus    @relation(fields: [campusId], references: [id])
  campusId     String
  Cuisine      Cuisine[]
  Reviews      Reviews[]
}

model Cuisine {
  id           String     @id @default(cuid())
  name         String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String
  Dish         Dish[]
}

model Dish {
  id              String      @id @default(cuid())
  name            String
  ingredientsDesc String
  calories        String
  price           Decimal
  cuisine         Cuisine     @relation(fields: [cuisineId], references: [id])
  cuisineId       String
  Favourite       Favourite[]
}

model Favourite {
  id     String @id @default(cuid())
  custId String
  dish   Dish   @relation(fields: [dishId], references: [id])
  dishId String

  @@unique([custId, dishId])
}

model Reviews {
  id           String     @id @default(cuid())
  description  String
  custId       String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  custName     String
  restaurantId String
  createdAt    DateTime   @default(now())
}
